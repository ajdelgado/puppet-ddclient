<% if scope.lookupvar("ddclient::daemon_interval") != '' -%>
daemon=<%= scope.lookupvar("ddclient::daemon_interval") %>
<% end -%>
<% if scope.lookupvar("ddclient::real_enable_syslog") != '' -%>
syslog=<%= scope.lookupvar("ddclient::real_enable_syslog") %>
<% end -%>
<% if scope.lookupvar("ddclient::mailto") != '' -%>
mail=<%= scope.lookupvar("ddclient::mailto") %>
<% end -%>
<% if scope.lookupvar("ddclient::pid_file") != '' -%>
pid=<%= scope.lookupvar("ddclient::pid_file") %>
<% end -%>
<% if scope.lookupvar("ddclient::real_enable_ssl") != '' -%>
ssl=<%= scope.lookupvar("ddclient::real_enable_ssl") %>
<% end -%>
<% if scope.lookupvar("ddclient::getip_from") != '' -%>
use=<%= scope.lookupvar("ddclient::getip_from") %><% if scope['ddclient.array_getip_options'] -%>,<%= scope['ddclient.array_getip_options'].join(',') %><% end -%>
<% end -%>

